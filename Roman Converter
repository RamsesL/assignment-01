#include <iostream>

namespace std::
std::cout;
std::cin;


int main()
{

double Number;
int intNum, M, D, C, L, X, V, I, N;
char Ans;
do
{
cout << "Enter a number:";
cin >> Num;
intNum = (int)Num;

M = intNum / 1000;
D = ((intNum%1000)/500);
C = ((intNum%500)/100);
L = ((intNum%100)/50);
X = ((intNum%50)/10);
V = ((intNum%10)/5);
I = (intNum%5);
N = M+D+C+L+X+V+I;

while (N > 0)
{
      if (M > 0)
      {
      cout << "M";
      M--;
      N--;
      }

      else if (D > 0)
      {
      cout << "D";
      D--;
      N--;
      }
      else if (C > 0)
      {
      cout << "C";
      C--;
      N--;
      }
      else if (L > 0)
      {
      cout << "L";
      L--;
      N--;
      }
      else if (X > 0)
      {
      cout << "X";
      X--;
      N--;
      }
     else if (V > 0)
      {
      cout << "V";
      V--;
      N--;
      }
     else if (I > 0)
      {
      cout << "I";
      I--;
      N--;
      }
cout<< " Would you like to convert another interger (Y/N)? "
}while(while (Ans == 'Y' && Ans == 'y')
}


system("pause");
return 0;
} 
